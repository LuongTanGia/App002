# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_CONNECTION_STRING=mongodb://localhost:27017/inventory_management

# JWT Security Configuration
# Generate a strong 64-character secret key for production
JWT_SECRET=your_super_secure_jwt_secret_key_at_least_32_characters_long_for_production_use

# CORS Configuration
CORS_ORIGIN=http://localhost:3002,http://localhost:3001

# Swagger Configuration
SWAGGER_HOST=localhost:3000

# Security Settings
BCRYPT_ROUNDS=12

# Rate Limiting
ENABLE_RATE_LIMITING=true

# Logging
LOG_LEVEL=info
