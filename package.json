{
  "name": "inventory-management-api",
  "version": "1.0.0",
  "description": "A comprehensive inventory management API built with Fastify, TypeScript, and MongoDB",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsup src --out-dir dist --format esm,cjs",
    "start": "node dist/server.js",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "quality": "npm run lint && npm run type-check && npm run format:check",
    "quality:fix": "npm run lint:fix && npm run format",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:unit": "jest --config jest.unit.config.js",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:full": "node scripts/test-all.js",
    "test:ci": "npm run test:coverage && npm run test:integration",
    "migrate": "ts-node src/migrations/cli.ts up",
    "migrate:status": "ts-node src/migrations/cli.ts status",
    "migrate:down": "ts-node src/migrations/cli.ts down",
    "migrate:reset": "ts-node src/migrations/cli.ts reset",
    "migrate:create": "ts-node src/migrations/cli.ts create",
    "migrate:validate": "ts-node src/migrations/cli.ts validate",
    "migrate:dry": "ts-node src/migrations/cli.ts up --dry-run",
    "clean": "rimraf dist coverage",
    "prebuild": "npm run clean",
    "setup": "bash setup.sh",
    "setup:windows": "powershell -ExecutionPolicy Bypass -File setup.ps1"
  },
  "keywords": [
    "api",
    "inventory",
    "fastify",
    "typescript",
    "mongodb",
    "backend",
    "nodejs"
  ],
  "author": "LuongTanGia <luongtangia@example.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.12",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.6",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/swagger": "^9.5.0",
    "@fastify/swagger-ui": "^5.2.2",
    "bcryptjs": "^3.0.2",
    "chalk": "^5.4.1",
    "commander": "^11.1.0",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.2",
    "fastify-cors": "^6.0.3",
    "fastify-swagger": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.14.1",
    "zod": "^3.24.4"
  }
}
